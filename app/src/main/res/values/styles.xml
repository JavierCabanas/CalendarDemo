<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/primary</item> 
        <item name="colorPrimaryDark">@color/primary_dark</item> 
        <item name="colorControlHighlight">@color/accent_translucent</item> 
        <item name="android:colorControlHighlight">@color/accent_translucent</item> 
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:src">@drawable/ic_add_black</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">12dp</item>
        <item name="pressedTranslationZ">18dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <color name="primary">#00BCD4</color>
    <color name="primary_dark">#4285F4</color>
    <color name="accent">#4EBAC1</color>
    <color name="accent_translucent">#804EBAC1</color>
    <color name="accent_bright">#FFF493</color>

</resources>
